extends base.pug

block content 
    if errorMessage 
        span=errorMessage 

    form(method="POST")
        input(name="username", placeholder="Your username", type="text", required)
        input(name="password", placeholder="Password", type="password", required)
        input(type="submit", value="Log in")
        br
        a(href="/users/github/start") Continue with GitHub
    hr
    
    div 
        span Don't have an account?
        br
        a(href="/join") Create one now &rarr;